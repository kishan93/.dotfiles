#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(tmux list-sessions | fzf | cut -d: -f1)
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)

if [[ $TMUX ]] && [[ $tmux_running ]]; then
    tmux switch-client -t $selected
    exit 0
fi

tmux attach -t $selected
